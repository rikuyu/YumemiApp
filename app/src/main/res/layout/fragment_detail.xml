<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.DetailFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_begin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="20dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/contributer_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toStartOf="@id/guide_end"
        app:layout_constraintStart_toEndOf="@+id/guide_begin"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/contributer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/contributer_icon"
        app:layout_constraintStart_toStartOf="@+id/contributer_icon"
        app:layout_constraintTop_toBottomOf="@+id/contributer_icon" />

    <ImageView
        android:id="@+id/github"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/github"
        app:layout_constraintEnd_toEndOf="@+id/contributer_icon"
        app:layout_constraintStart_toStartOf="@id/contributer_icon"
        app:layout_constraintTop_toBottomOf="@+id/contributer_name" />

    <Button
        android:id="@+id/button_following"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_people"
        android:paddingHorizontal="8dp"
        android:text="@string/following"
        app:layout_constraintStart_toStartOf="@id/guide_begin"
        app:layout_constraintEnd_toStartOf="@+id/button_follower"
        app:layout_constraintTop_toBottomOf="@+id/github" />

    <Button
        android:id="@+id/button_follower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_people"
        android:paddingHorizontal="8dp"
        android:text="@string/follower"
        app:layout_constraintEnd_toEndOf="@+id/guide_end"
        app:layout_constraintStart_toEndOf="@+id/button_following"
        app:layout_constraintTop_toBottomOf="@+id/github" />

    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_home"
        android:paddingHorizontal="8dp"
        android:text="@string/home_fragment_title"
        app:layout_constraintEnd_toEndOf="@+id/guide_end"
        app:layout_constraintStart_toStartOf="@+id/guide_begin"
        app:layout_constraintTop_toBottomOf="@+id/button_following" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>